<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:background="#ffff00"
    android:layout_marginTop="20dp"
    android:layout_marginBottom="20dp"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <Button


        android:id="@+id/record_item_id"
        android:focusable="false"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:background="@drawable/shape_oval"
        android:text="1"
        android:textColor="#ffffff"
        android:enabled="false"
        android:gravity="center"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/record_item_texview"


        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="所有我排除的题"
        android:textSize="20sp"
        android:layout_marginLeft="18dp"
        android:layout_marginStart="18dp"
        android:layout_alignTop="@+id/record_item_id"
        android:layout_toRightOf="@+id/record_item_id"
        android:layout_toEndOf="@+id/record_item_id" />
    <Button
        android:focusable="false"
        android:id="@+id/record_item_count"

        android:layout_width="40dp"
        android:layout_height="25dp"
        android:background="@drawable/shape_rectange"
        android:enabled="false"
        android:text="1"
        android:layout_marginRight="7dp"
        android:layout_marginEnd="7dp"
        android:layout_alignBottom="@+id/record_item_texview"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />


</RelativeLayout>